License: GPL
Description: Asynchronous circuit compiler and design tools
BuildDepends: <<
  readline5	(>= 5.0-1),
# bison		(>= 1.875-1),
  guile18-dev	(>= 1.8.1-1),
  graphviz	(>= 1.12-1),
  transfig,
  texinfo,
  texi2html,
  tetex		(>= 3.0-1)
<<
Depends: <<
  readline5-shlibs,
  guile18-shlibs
<<
ConfigureParams: --prefix=%p YACC=/usr/bin/yacc --with-readline=%p --with-guile-config=guile-1.8-config --with-guile=guile-1.8 -C
CompileScript: <<
#!/bin/sh -ev
mkdir darwin-build
cd darwin-build
../configure %c
make
<<
TestScript: <<
#!/bin/sh -ev
cd darwin-build
make check.log
<<
InstallScript: <<
#!/bin/sh -ev
cd darwin-build
make DESTDIR=%d install
<<
