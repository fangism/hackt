include $(top_srcdir)/Make.stddef

# commented definitions are set by configure
# DVIPS = dvips
PSNUP = psnup
# LATEX = latex
# PDFLATEX = pdflatex
# BIBTEX = bibtex
# MAKEINDEX = makeindex
MAKETEXDEPEND = $(AWK) -f $(top_srcdir)/dox/mk/maketexdepend.awk \
	-v script=$(top_srcdir)/dox/mk/maketexdepend.awk -v srcdir=$(srcdir) \
	-v readable=1 -v extensions="pdf dvi depend" -v touch=0

SUFFIXES = .ps .dvi .tex .pdf .depend


.tex.depend:
	@$(ECHO) "Generating auto-dependencies $@..."
	@if [ -f $@ ] ; then \
		$(MAKETEXDEPEND) $< > $@.new ; \
		if ! $(DIFF) -q $@ $@.new ; then \
			mv -f $@.new $@ ; \
			$(ECHO) "Updated $@." ; \
		else 	$(RM) $@.new ; \
			$(ECHO) "$@ is unchanged."; \
			$(TOUCH) $@; \
		fi > /dev/null ; \
	else	$(MAKETEXDEPEND) $< > $@ ; \
		$(ECHO) "Created $@." ; \
	fi

if HAVE_LATEX
.tex.dvi:
	@$(ECHO) "Generating $@..."
	@$(LATEX) $< > /dev/null < /dev/null
	@if $(GREP) "TeX capacity" $*.log; \
		then $(ECHO) SHIT ; \
	fi
	@if $(GREP) -q "\\citation" $*.aux ; then $(BIBTEX) $* ; fi
	@if [ -f $*.idx ] ; then $(MAKEINDEX) $*.idx ; fi 
	@if ($(GREP) 'LaTeX Warning:' $*.log | $(GREP) -v floats); then \
		$(ECHO); $(ECHO) "Detected warnings, doing second LaTeX pass..." ; \
		$(LATEX) $< > /dev/null < /dev/null; \
		if [ -f $*.idx ] ; then $(MAKEINDEX) $*.idx ; fi ; \
		if $(GREP) "TeX capacity" $*.log; \
			then $(ECHO) SHIT; \
		elif $(GREP) 'LaTeX Warning: Citation' $*.log; then \
			$(ECHO); $(ECHO) "Citation warnings, third LaTeX pass..."; \
			$(LATEX) $< > /dev/null < /dev/null; \
		fi; \
		($(GREP) 'LaTeX Warn' $*.log || ($(ECHO) > /dev/null)); \
	fi
	@$(ECHO) "$@ completed."
endif

if HAVE_PDFLATEX
.tex.pdf:
	@$(ECHO) "Generating $@..."
	@$(PDFLATEX) $< > /dev/null < /dev/null
	@if $(GREP) "TeX capacity" $*.log; \
		then $(ECHO) SHIT ; \
	fi
	@if $(GREP) -q "\\citation" $*.aux ; then $(BIBTEX) $* ; fi
	@if [ -f $*.idx ] ; then $(MAKEINDEX) $*.idx ; fi 
	@if ($(GREP) 'LaTeX Warning:' $*.log | $(GREP) -v floats); then \
		$(ECHO); $(ECHO) "Detected warnings, doing second LaTeX pass..." ; \
		$(PDFLATEX) $< > /dev/null < /dev/null; \
		if [ -f $*.idx ] ; then $(MAKEINDEX) $*.idx ; fi ; \
		if $(GREP) "TeX capacity" $*.log; \
			then $(ECHO) SHIT; \
		elif $(GREP) 'LaTeX Warning: Citation' $*.log; then \
			$(ECHO); $(ECHO) "Citation warnings, third LaTeX pass..."; \
			$(PDFLATEX) $< > /dev/null < /dev/null; \
		fi; \
		($(GREP) 'LaTeX Warn' $*.log || ($(ECHO) > /dev/null)); \
	fi
	@$(ECHO) "$@ completed."
endif

if HAVE_DVIPS
.dvi.ps:
	$(DVIPS) $< -o $@
endif

clean-bib:
	-$(RM) *.bbl *.blg

clean-index:
	-$(RM) *.idx *.ind *.ilg *.out

clean-aux:
	-$(RM) *.aux *.log *.toc

clean-depend:
	-$(RM) *.depend

clean-docs:
	-$(RM) *.ps *.dvi *.pdf

clean-local: clean-bib clean-index clean-aux clean-depend clean-docs

