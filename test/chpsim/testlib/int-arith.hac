template <pint N>
define adder(chan?(int<N>) A, B; chan!(int<N>) S) {
int<N> a, b;
chp {
*[ A?(a), B?(b); S!(a+b) ]
}
}

template <pint N>
define subtractor(chan?(int<N>) A, B; chan!(int<N>) S) {
int<N> a, b;
chp {
*[ A?(a), B?(b); S!(a-b) ]
}
}

