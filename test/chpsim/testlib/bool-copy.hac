// copy processes

// fanout-of-N copy
template <pint N>
defproc bool_copy (chan?(bool) A; chan!(bool) O[N]) {
bool a;
chp {
*[ A?(a); {,i:N: O[i]!(a) } ]
}
}

/***
defproc bool_copy_2 (chan?(bool) A; chan!(bool) O[2]) {
bool a;
chp {
*[ A?(a); O[0]!(a), O[1]!(a) ]
}
}
***/

typedef	bool_copy<2>		bool_copy_2;
typedef	bool_copy<3>		bool_copy_3;
typedef	bool_copy<4>		bool_copy_4;

