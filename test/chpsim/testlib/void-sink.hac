// void buckets

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	Plain infinite sink.  
 */
defproc void_sink(chan?() B) {
chp {
*[ B? ]
}
}

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	Plain infinite sink, with configurable delay.  
 */
template <preal D>
defproc void_sink_delay(chan?() B) {
chp {
*[ $(after=D) B? ]
}
}

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	sinks a limited number of times
 */
template <pint N>
defproc void_sink_once(chan?() B) {
chp {
{;i:N: B? }
}
}

