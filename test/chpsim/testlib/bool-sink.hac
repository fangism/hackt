//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	Plain infinite sink.  
 */
defproc bool_sink(chan?(bool) B) {
bool b;
chp {
*[ B?(b) ]
}
}

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	Plain infinite sink, with configurable delay.  
 */
template <preal D>
defproc bool_sink_delay(chan?(bool) B) {
bool b;
chp {
*[ $(after=D) B?(b) ]
}
}

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	sinks a limited number of times
 */
template <pint N>
defproc bool_sink_once(chan?(bool) B) {
bool b;
chp {
{;i:N: B?(b) }
}
}

