//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	Tokn-controlled sink, suitable for shared channel.  
 */
defproc bool_sink_shared(chan?() Cin; chan!() Cout; chan??(bool) B) {
chp {
*[ Cin?; B?; Cout! ]
}
}

