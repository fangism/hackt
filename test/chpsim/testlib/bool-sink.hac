// bool buckets

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
defproc bool_sink(chan?(bool) B) {
bool b;
chp {
*[ B?(b) ]
}
}

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	sinks a limited number of times
 */
template <pint N>
defproc bool_sink_once(chan?(bool) B) {
bool b;
chp {
{;i:N: B?(b) }
}
}

