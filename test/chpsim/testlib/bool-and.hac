// boolean logical AND

defproc bool_and_2(chan?(bool) A, B; chan!(bool) O) {
bool a, b;
chp {
*[A?(a),B?(b); O!(a && b)]
}
}

// pending meta-expression expansion support
template <pint N>
defproc bool_and(chan?(bool) A[N]; chan!(bool) O) {
bool a[N];
chp {
*[{,i:N: A[i]?(a[i])}; O!((&&:i:N: a[i]))]
}
}

