// int buckets

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
template <pint W=32>
defproc int_sink(chan?(int<W>) B) {
int<W> b;
chp {
*[ B?(b) ]
}
}

//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
/**
	sinks a limited number of times
 */
template <pint W; pint N>
defproc int_sink_once(chan?(int<W>) B) {
int b;
chp {
{;i:N: B?(b) }
}
}

