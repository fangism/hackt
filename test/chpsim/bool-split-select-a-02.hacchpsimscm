(use-modules (hackt chpsim-primitives))
(use-modules (hackt chpsim))
(use-modules (ice-9 streams))
(use-modules (hackt streams))

(define x (static-event-stream))

; don't forget cdr, because each event is a paired with its index
(define y (stream-filter (lambda (e) (chpsim-event-trivial? (cdr e))) x))

; show only trivial events
"all null-events:"
(stream-for-each-display-newline y)
(newline)

(define y (stream-filter (lambda (e) (chpsim-event-fork? (cdr e))) x))
"all fork-events:"
(stream-for-each-display-newline y)
(newline)

(define y (stream-filter (lambda (e) (chpsim-event-assign? (cdr e))) x))
"all assign-events:"
(stream-for-each-display-newline y)
(newline)

(define y (stream-filter (lambda (e) (chpsim-event-send? (cdr e))) x))
"all send-events:"
(stream-for-each-display-newline y)
(newline)

(define y (stream-filter (lambda (e) (chpsim-event-receive? (cdr e))) x))
"all receive-events:"
(stream-for-each-display-newline y)
(newline)

(define y (stream-filter (lambda (e) (chpsim-event-select? (cdr e))) x))
"all select-events:"
(stream-for-each-display-newline y)
(newline)

