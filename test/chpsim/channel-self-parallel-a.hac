// channel sends to itself in sequence of parallel sends

chan(bool) X;
bool b;

chp {
	X!(true), X?(b);	// paired concurrent
	X!(false), X?(b);
	X!(true), X?(b)
}
// should work, because channel is initially ready to send
// should still occur sequentially, with no real concurrency

