// nested loop countdowns

int c, d;

chp {
c:=0;
*[ (c < 3) ->
	d:=0;
	*[ (d < 2) ->
		d:=d+1
	],			// concurrent
	c:=c+1
]
}
// these count UP, I know...
// will terminate with c = 3, d = 2

