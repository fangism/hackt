# "channel-test-b-17.prsimrc"
# copy-modified from "channel-test-b-04.prsimrc"
# @haco@ channel-test-b.haco-a
# testing source/sinks on different channels
# adding expect, not looped

source channel-test-b-01.prsimrc

channel-source-args L 0 1 1 0 1 1
channel-sink R
channel-expect-args R 0 1 1 0 1 1 0 1 1
echo excess expect values will not be used
channel-show L
channel-show R
channel-watchall

channel-reset-all
channel-show L
channel-show R
cycle
channel-show L
channel-show R
assert L.d[0] 0
assert L.d[1] 0
assert L.e 1
assert R.d[0] 0
assert R.d[1] 0
assert R.e 0

channel-release-all
queue

cycle
assertn-queue
echo no asserts failed, yay!
channel-show L
channel-show R

