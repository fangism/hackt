echo testing different error handling policies

assert-fail ignore
echo ignoring... (silent)
assert a X
assert a 0
assert a 1

assert-fail warn
echo warning...
assert a X
assert a 0
assert a 1

assert-fail break
echo breaking... (same as warning)
assert a X
assert a 0
assert a 1

assert-fail interactive
echo interactive (will prompt)...
assert a X
assert a 0
assert a 1
assert a 0
assert a 1
assert a 0
assert a 1

