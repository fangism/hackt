# "channel-bd2p-test-a-ev-08.prsimrc"
# @haco@ channel-bd2p-test-a.haco-c
# testing channel source and sink together

# echo-commands on
source channel-bd2p-test-a-01.prsimrc

channel-show A
channel-source-args-loop A 111 255 42 64 33 33 12 9
channel-sink A
channel-watch A
channel-ignore-all
channel-reset A
cycle
getall A
channel-show A

watchall
echo releasing channel A (source)
channel-heed-all
channel-release A
echo source values on A will repeat
step-event 80
time

assert-queue
channel-unwatch A
nowatchall

echo running a bit longer...
step 12345
assert-queue
time
channel-show A

