# "rule_unstable-a-01.prsimrc"
# @haco@ rule_unstable-a.haco-a

rules .
watchall

set a 1
set b 0
cycle

set a 0
step-event
pending c
set a 1
cycle
assertn-queue
echo event c+ was silently killed
assert c X

set b 1
step-event
pending c
set b 0
cycle
assertn-queue
echo event c- was silently killed
assert c X

set b 1
cycle
assert c 0
set b 0
cycle

set a 0
step-event
pending c
set a 1
cycle
assertn-queue
echo event c+ was silently killed

echo testing weak instability...
set a 0
step-event
pending c
set a X
cycle
echo should suppress c+ weak unstable
echo c should still become X
assert c X

set a 0
cycle
assert c 1
set a 1
cycle

set b 1
step-event
pending c
set b X
cycle
echo should suppress c- weak unstable
echo c should still become X
assert c X

