# "channel-test-b-11.prsimrc"
# copy-modified from "channel-test-b-09.prsimrc"
# @haco@ channel-test-b.haco-a
# @deps@ channel-dont-cares.txt
# testing source/sinks on different channels
# adding expect, not looped, with don't cares

source channel-test-b-01.prsimrc

channel-source L channel-dont-cares.txt
channel-sink R
channel-expect R channel-dont-cares.txt
channel-show L
channel-show R
channel-watchall

channel-reset-all
channel-show L
channel-show R
cycle
channel-show L
channel-show R
assert L.d[0] 0
assert L.d[1] 0
assert L.e 1
assert R.d[0] 0
assert R.d[1] 0
assert R.e 0

channel-release-all
queue

cycle
assertn-queue
echo no asserts failed, yay!
channel-show L
channel-show R

