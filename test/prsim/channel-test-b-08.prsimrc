# "channel-test-b-08.prsimrc"
# @haco@ channel-test-b.haco-a
# @deps@ channel-test-a-values-X.txt
# testing source/sinks on different channels
# adding expect, not looped, should run out of asserts

source channel-test-b-01.prsimrc

echo now with random timing!
timing random
channel-source-loop L channel-test-a-values-X.txt
channel-sink R
channel-expect-loop R channel-test-a-values-X.txt
channel-show L
channel-show R
channel-watchall

channel-reset-all
channel-show L
channel-show R
cycle
channel-show L
channel-show R
assert L.d[0] 0
assert L.d[1] 0
assert L.e 1
assert R.d[0] 0
assert R.d[1] 0
assert R.e 0

channel-release-all
assert-queue

# step 51
step 50
assert-queue
# time
channel-show L
channel-show R

step 79
# step 78

# time
assert-queue
channel-show L
channel-show R
echo R is still asserting...

