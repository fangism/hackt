#!@SH_PATH@
# "test-series.sh.in"
# convenience script for running a sequence of tests on one input file.
#	$Id: test-series.sh.in,v 1.2 2005/08/04 23:02:59 fang Exp $
# This file originally came from "test-series.sh" in revision prehistory.  

# usage: pass in the root names of the test cases (without the .in extension)

for t in $@
do
	if ! [ -f $t.artctest ]
	then
		@CALLMAKE@ $t.artctest
	fi
	@ECHO@ $t.artctest
	$t.artctest
	if ! [ -s $t.test ]
	then
		if ! [ -f $t.artobjtest ]
		then
			@CALLMAKE@ $t.artobjtest
		fi
		@ECHO@ $t.artobjtest
		$t.artobjtest
		if ! [ -f $t.artobjunrolltest ]
		then
			@CALLMAKE@ $t.artobjunrolltest
		fi
		@ECHO@ $t.artobjunrolltest
		$t.artobjunrolltest
	fi
done


