template <pint N>
defproc celem(bool i[N], o) {
	bool _o;
prs {
	(&:j:N: i[j] )		-> _o-
	(&:j:N: ~i[j] )		-> _o+
	_o			=> o-
[iskeeper=1]	o		=> _o-
}
}

